<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/detail_image_back"
            android:padding="5dp"
            android:src="@drawable/leftjiantou"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_centerInParent="true"
            android:text="管理收货地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:layout_above="@+id/text_add_new"
        android:layout_below="@+id/detai_relative"
        android:id="@+id/list_view_addr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    <TextView
        android:text="+添加新地址"
        android:layout_alignParentBottom="true"
        android:id="@+id/text_add_new"
        android:gravity="center"
        android:background="#ff5300"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>
